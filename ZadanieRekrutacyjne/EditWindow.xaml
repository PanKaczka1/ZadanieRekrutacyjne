<Window x:Class="ZadanieRekrutacyjne.EditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZadanieRekrutacyjne"
        mc:Ignorable="d"
        Title="EditWindow" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0">Tytul</TextBlock>
        <TextBlock Grid.Row="2">Cena</TextBlock>
        <TextBlock Grid.Row="4">Autor</TextBlock>
        <TextBox Name="name" Grid.Row="1"></TextBox>
        <TextBox Name="price" Grid.Row="3" PreviewTextInput="NumberValidationTextBox"/>
        <TextBox Name="author" Grid.Row="5"></TextBox>
        <Button Grid.Row="7" Click="Button_Click">Dodaj</Button>
    </Grid>
</Window>
